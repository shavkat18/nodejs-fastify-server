{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es2022",
        "lib": ["es2022"],
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "removeComments": false,
        "types": ["node"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"],
            "@api/*": ["./src/api/*"],
            "@core/*": ["./src/core/*"],
            "@package": ["./package.json"],
            "@config": ["./src/init/config"],
            "@logger": ["./src/init/logger"],
            "@interfaces": ["./src/interfaces"],
            "@database/*": ["./src/init/database/*"],
            "@utils/*": ["./src/utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        ".eslintrc.cjs",
        "jest.config.cjs"
    ]
}
